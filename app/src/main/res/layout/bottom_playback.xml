<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/echo_appbar_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginEnd="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:paddingVertical="7dp"
        android:layout_marginEnd="72dp">

        <ImageView
            android:id="@+id/babIvEpisodeImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="4dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="8dp"
            app:layout_constraintStart_toEndOf="@id/babIvEpisodeImage">

            <TextView
                android:id="@+id/babTvEpisodeInfo"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="Стихийный Плющев. Речь в Совете Федерации, Путин в госпитале, Хороший Русский Кот. (2022-27-05)"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textSize="18sp"
                android:paddingBottom="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/babTvTimerEpisodeStart"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="00:00:00"
                android:textSize="11sp"
                android:textColor="@color/gray_600"
                app:layout_constraintTop_toBottomOf="@id/babTvEpisodeInfo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/babTvTimerDivider"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="//"
                android:textSize="11dp"
                android:textColor="@color/gray_600"
                android:paddingHorizontal="8dp"
                app:layout_constraintTop_toBottomOf="@id/babTvEpisodeInfo"
                app:layout_constraintStart_toEndOf="@id/babTvTimerEpisodeStart"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/babTvTimerEpisodeTotal"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="00:00:00"
                android:textSize="11sp"
                android:textColor="@color/gray_600"
                app:layout_constraintStart_toEndOf="@id/babTvTimerDivider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/babTvEpisodeInfo"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/babLinearProgressBar"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

</LinearLayout>